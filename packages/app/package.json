{
  "name": "app",
  "version": "0.0.1",
  "description": "snake on the web",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist pkg",
    "prebuild": "bun run clean",
    "build": "bun run build:rust && bun run build:minify && bun run build:copy && bun run encode && bun run sizes",
    "build:rust": "wasm-pack build --target web",
    "build:minify": "esbuild --bundle src-not-rust/app.ts --outfile=dist/app.js --minify --sourcemap --platform=browser --analyze",
    "build:copy": "cp src-not-rust/index.html dist/index.html && cp pkg/app_bg.wasm dist/app_bg.wasm",
    "serve": "serve -s dist",
    "sizes": "cd dist && echo 'sizes:' && du -h | sort -h && ls -sh *.wasm && ls -sh *.js && ls -sh *css && ls -sh *.html && cd ..",
    "encode": "cargo run --package encoder --release -- -i audio -o dist/audio -b 96k"
  },
  "keywords": [],
  "author": "Joel Lof <jlof@evolution.com> (https://joellof.com/)",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "0.15.13",
    "rimraf": "3.0.2",
    "serve": "14.1.2",
    "typescript": "4.9.3",
    "encoder": "file:../encoder"
  },
  "dependencies": {
  }
}
